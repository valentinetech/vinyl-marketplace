{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
}

