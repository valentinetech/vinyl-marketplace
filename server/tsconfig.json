{
    "compilerOptions": {
        "rootDir": "",
        "baseUrl": "",
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./build",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        // "typeRoots": ["./types", "./node_modules/@types"],
        "types": ["node"]
    },
    "include": ["*"],
    "exclude": ["node_modules"]
}
